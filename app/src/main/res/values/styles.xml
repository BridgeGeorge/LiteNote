<resources>

    <!-- 基础应用主题 -->
    <style name="BaseTheme" parent="@android:style/Theme.Holo.Light"></style>

    <style name="BaseActionBar" parent="@android:style/Widget.ActionBar"></style>

    <style name="BaseTitleTextStyle" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="AppTheme" parent="@style/BaseTheme">
        <!-- Customize your theme here. -->
        <item name="android:actionBarStyle">@style/MainActionBar</item>
        <item name="android:windowActionBarOverlay">true</item>
    </style>

    <!--自定义的ActionBar-->
    <style name="MainActionBar" parent="@style/BaseActionBar">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:titleTextStyle">@style/BaseTitleTextStyle</item>
    </style>
    <!-- 设置界面的Theme样式-->
    <style name="SettingTheme" parent="@style/BaseTheme">
        <item name="android:actionBarStyle">@style/SettingActionBar</item>
    </style>

    <style name="SettingActionBar" parent="@style/BaseActionBar">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:titleTextStyle">@style/BaseTitleTextStyle</item>
        <item name="android:displayOptions">none|showTitle</item>
    </style>
    <!--添加Note界面Theme样式-->
    <style name="PubTheme" parent="@style/BaseTheme">
        <item name="android:actionBarStyle">@style/PubActionBar</item>
        <item name="android:windowAnimationStyle">@style/PubAnimation</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>
    <!--发表笔记界面样式-->
    <style name="PubActionBar" parent="@style/BaseActionBar">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:titleTextStyle">@style/BaseTitleTextStyle</item>
        <item name="android:displayOptions">none|showTitle</item>
    </style>
    <!--RecSendActivity 界面样式-->
    <style name="RecTheme" parent="android:Theme.Holo.Light.NoActionBar">
        <!-- float_box为我们定义的窗口背景 ，这个不是必须的-->
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="PubAnimation" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/pub_pull_in</item>
        <item name="android:activityCloseExitAnimation">@anim/pub_pull_out</item>
    </style>
    <!--switchButton 样式-->
    <style name="SwitchButtonStyle">
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
    </style>

</resources>
